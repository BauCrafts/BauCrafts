    <script>
        const products = [
            ...Array.from({length: 10}, (_, i) => ({
                id: i, cat: 'broderii', sub: i < 5 ? 'Tricouri' : 'Tablouri', 
                title: `Produs Brodat ${i+1}`, price: `${120 + i*5} RON`, 
                colors: ['#FFFFFF', '#000000', '#FFD700'], 
                img: 'https://via.placeholder.com/500x600/f8fafc/64748b?text=BRODERIE'
            })),
            ...Array.from({length: 10}, (_, i) => ({
                id: i+10, cat: '3d', sub: i < 5 ? 'Articulat' : 'Decor', 
                title: `Model 3D Printat ${i+1}`, price: `${45 + i*10} RON`, 
                colors: ['#334155', '#10b981', '#6366f1'], 
                img: 'https://via.placeholder.com/500x600/f1f5f9/475569?text=3D+PRINT'
            }))
        ];

        function initStore(category) {
            document.getElementById('welcome-screen').classList.add('hidden-section');
            document.getElementById('main-content').classList.remove('hidden-section');
            window.scrollTo(0, 0);
            renderCategory(category);
        }

        function renderCategory(cat) {
            document.getElementById('nav-broderii').classList.toggle('text-blue-600', cat === 'broderii');
            document.getElementById('nav-3d').classList.toggle('text-blue-600', cat === '3d');

            const filtered = products.filter(p => p.cat === cat);
            const subs = [...new Set(filtered.map(p => p.sub))];
            
            document.getElementById('sub-nav').innerHTML = subs.map(s => 
                `<button onclick="renderSub('${cat}', '${s}')" class="px-5 py-2 border border-gray-200 rounded-full hover:bg-black hover:text-white text-[10px] font-bold tracking-widest transition-all duration-300 uppercase">${s}</button>`
            ).join('');
            
            renderGrid(filtered);
        }

        function renderSub(cat, sub) {
            const filtered = products.filter(p => p.cat === cat && p.sub === sub);
            renderGrid(filtered);
        }

        function renderGrid(data) {
            document.getElementById('grid').innerHTML = data.map(p => `
                <div class="cursor-pointer group animate-fade-in" onclick="openModal(${p.id})">
                    <div class="aspect-[3/4] overflow-hidden rounded-sm bg-gray-100 mb-5 relative">
                        <img src="${p.img}" class="w-full h-full object-cover transition duration-1000 group-hover:scale-105">
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition duration-500"></div>
                    </div>
                    <h3 class="text-[10px] uppercase tracking-[0.2em] text-blue-500 mb-2 font-bold">${p.sub}</h3>
                    <h3 class="text-sm font-medium text-black tracking-tight">${p.title}</h3>
                    <p class="text-gray-400 text-xs mt-2 italic font-serif">${p.price}</p>
                </div>
            `).join('');
        }

        function openModal(id) {
            const p = products.find(p => p.id === id);
            document.getElementById('modal-img').innerHTML = `<img src="${p.img}" class="max-h-[60vh] md:max-h-full object-contain">`;
            document.getElementById('modal-details').innerHTML = `
                <span class="text-[10px] tracking-[0.3em] text-blue-600 uppercase font-black">${p.sub}</span>
                <h2 class="text-3xl font-light mt-4 tracking-tighter">${p.title}</h2>
                <p class="text-2xl mt-4 font-bold text-gray-900">${p.price}</p>
                <div class="mt-8">
                    <p class="text-[10px] uppercase tracking-widest text-gray-400 mb-4 font-bold">Variante Culoare</p>
                    <div class="flex gap-3">
                        ${p.colors.map(c => `<button class="w-8 h-8 rounded-full border border-gray-100 shadow-sm" style="background:${c}"></button>`).join('')}
                    </div>
                </div>
                <div class="mt-10 p-4 border border-gray-100 rounded-lg bg-gray-50">
                    <p class="text-[11px] text-gray-500 uppercase leading-relaxed font-medium">
                        Toate produsele sunt realizate la comandă. Timp execuție: 3-5 zile lucrătoare.
                    </p>
                </div>
                <a href="mailto:salut@baucrafts.ro?subject=Solicitare oferta: ${p.title}" class="mt-8 w-full bg-black text-white py-5 rounded-sm font-bold tracking-[0.2em] text-xs text-center hover:bg-gray-800 transition active:scale-95 uppercase">Trimite Cerere</a>
            `;
            document.getElementById('modal').classList.add('modal-active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('modal').classList.remove('modal-active');
            document.body.style.overflow = 'auto';
        }
    </script>
</body>
</html>
