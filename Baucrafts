    <div id="modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-[110] p-4" onclick="closeModal()">
        <div class="bg-white max-w-4xl w-full rounded-2xl shadow-2xl overflow-hidden flex flex-col md:flex-row relative" onclick="event.stopPropagation()">
            <button onclick="closeModal()" class="absolute top-4 right-6 text-3xl font-light hover:rotate-90 transition transform duration-300">&times;</button>
            <div id="modal-img" class="md:w-1/2 bg-gray-50 flex items-center justify-center p-4 lg:p-12 text-center"></div>
            <div id="modal-details" class="md:w-1/2 p-10 flex flex-col justify-center bg-white"></div>
        </div>
